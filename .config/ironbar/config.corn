let {
    $workspaces = {
        type = "workspaces"
        all_monitors = false
    }

    $tray = { type = "tray" }

    $clock = { type = "clock" }

    $volume = {
        type = "volume"
        format = "<span color='#B2CCD6'>{icon}</span> {percentage}%"
        max_volume = 100
        icons.volume_high = "󰕾"
        icons.volume_medium = "󰖀"
        icons.volume_low = "󰕿"
        icons.muted = "󰝟"
    }

    $battery = {
        type = "script"
        cmd = "~/.config/ironbar/battery_widget"
        mode = "poll"
        interval = 5000
        tooltip = "{{~/.config/ironbar/battery_tooltip}}"
    }
    $network = {
        type = "script"
        cmd = "~/.config/ironbar/network_widget"
        mode = "poll"
        interval = 5000
        tooltip = "{{iwgetid -r}}"
    }

    $left = [ $clock $tray]
    $middle = [ $workspaces ]
    $right = [ $volume $network $battery ]
}
in {
    anchor_to_edges = true
    position = "bottom"
    height = 10
    icon_theme = "Papirus-dark"

    start = $left
    center = $middle
    end = $right
}
